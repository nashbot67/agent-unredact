# Agent Unredact Configuration

# Environment
NODE_ENV=development
LOG_LEVEL=info

# API Server
PORT=3000
HOST=localhost

# Database
DATABASE_URL=postgresql://localhost/agent_unredact
# For Docker: postgresql://agent_unredact:changeme@postgres:5432/agent_unredact

# Redis (for caching, queues, rate limiting)
REDIS_URL=redis://localhost:6379
# For Docker: redis://redis:6379

# File Storage (S3/R2)
S3_BUCKET=epstein-files
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=your_access_key_here
S3_SECRET_KEY=your_secret_key_here
S3_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Stale Task Reaper
STALE_TASK_TIMEOUT_MS=3600000
STALE_TASK_CHECK_INTERVAL_MS=300000

# Worker Process
WORKER_ENABLED=false
WORKER_POLL_INTERVAL_MS=10000
WORKER_BATCH_SIZE=100

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_ENABLED=true

# Security
API_SECRET_KEY=generate_random_32_char_string
CORS_ORIGIN=*
ENABLE_HELMET=true

# Logging
LOG_FORMAT=json
LOG_STDOUT=true
LOG_FILE=logs/agent-unredact.log

# Feature Flags
FEATURE_WEBSOCKET=false
FEATURE_GRAPHQL=false
FEATURE_WEBHOOKS=false
